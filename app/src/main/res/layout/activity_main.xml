<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg1"
        android:paddingRight="20dp"
        android:gravity="right"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="C"
            android:background="@drawable/b3"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnClear"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="%"
            android:background="@drawable/b3"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnPer"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Ac"
            android:background="@drawable/b3"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnAc"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="รท"
            android:background="@drawable/b3"
            android:textSize="50dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnDiv"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="7"
            android:background="@drawable/bg"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColorHint="#DFDBDB"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn7"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="8"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn8"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="9"
            android:background="@drawable/bg"
            android:layout_weight="1"
            android:textColorHint="#DFDBDB"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn9"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="+"
            android:background="@drawable/b3"
            android:textSize="50dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnSum"></Button>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="4"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn4"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="5"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn5"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="6"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn6"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="-"
            android:background="@drawable/b3"
            android:layout_weight="1"
            android:textSize="50dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnSub"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="1"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn1"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="2"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn2"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="3"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btn3"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="*"
            android:background="@drawable/b3"
            android:textSize="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/btnMulti"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="00"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:id="@+id/btn00"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="0"
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:id="@+id/btn0"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="."
            android:background="@drawable/bg"
            android:textColorHint="#DFDBDB"
            android:textSize="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:id="@+id/btnPoint"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="="
            android:background="@drawable/b3"
            android:textSize="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:id="@+id/btnEqual"></Button>

    </LinearLayout>

</LinearLayout>